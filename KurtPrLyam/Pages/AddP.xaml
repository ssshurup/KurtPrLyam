<Page x:Class="KurtPrLyam.Pages.AddP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KurtPrLyam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddP" Background="White">



    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="NameTB" TextWrapping="Wrap" Text="{Binding name}" Width="120" Margin="0,5,0,5"/>
            <TextBox x:Name="DurationTB" TextWrapping="Wrap" Text="{Binding duration}" Width="120" Margin="0,5,0,5"/>
            <TextBox x:Name="DescriptionTB" TextWrapping="Wrap" Text="{Binding description}" Width="120" Margin="0,5,0,5"/>
            <TextBox x:Name="ReleaseTB" TextWrapping="Wrap" Text="{Binding release}" Width="120" Margin="0,5,0,5"/>
            <ComboBox x:Name="CountryCB" Width="120"  Margin="0,5,0,5" Text="{Binding country}" DisplayMemberPath="name"/>
            <ComboBox x:Name="DirectorCB" Width="120"  Margin="0,5,0,5" Text="{Binding director}" DisplayMemberPath="name"/>
            <Button x:Name="AddBT" Content="Add film" Click="AddBT_Click"/>
            <Button x:Name="BackBT" Content="Back" Margin="25,5,25,5" />
            
        </StackPanel>
    </Grid>
</Page>
